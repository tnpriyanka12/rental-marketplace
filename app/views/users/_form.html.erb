
<%= form_for @user , html: {multipart: true} do |f| %>

<fieldset>
  <%= f.label :username %>
  <%= f.text_field :username %>
</fieldset>

<fieldset>
  <%= f.label :full_name  %>
  <%= f.text_field :full_name %>
</fieldset>

<fieldset>
  <%= f.label :email %>
  <%= f.text_field :email %>
</fieldset>

<fieldset>
  <%= f.label :description %>
  <%= f.text_field :description %>
</fieldset>

<fieldset>
  <%= f.label :profile_pic %>
  <%= f.cl_image_upload :profile_pic %>
</fieldset>


<%= f.label :password %>
<%= f.password_field :password %>
<br>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>


<%= f.submit %>


<% end %>


<div style = "color:red; font-size:20px">
<%=flash[:error]%>
</div>


<%= form_for [@property, @booking], class:"form-horizontal" do |f| %>

<div class="form-group">
  <div class=col-sm-10>
<fieldset>
  <%= f.label :check_in %>
  <%= f.date_field :check_in , min: Date.today , class:"form-control"%>
</fieldset>
</div>
</div>

<div class="form-group">
  <div class=col-sm-10>
<fieldset>
  <%= f.label :check_out  %>
  <%= f.date_field :check_out , min: Date.today , class:"form-control" %>
</fieldset>
</div>
</div>


<div class="form-group">
  <div class="col-sm-10">
    <br><%= f.submit  'Make Payment', class:"btn btn-primary" %>
  </div>
</div>

<% end %>



<%= form_for @property, html: {multipart: true}, class:"form-horizontal" do |f| %>

<div class="form-group">
  <div class=col-sm-10>
<fieldset>
  <%= f.label :address %>
  <%= f.text_field :address ,class:"form-control"%>
</fieldset>
</div>
</div>

<div class="form-group">
  <div class=col-sm-10>
<fieldset>
  <%= f.label :city  %>
  <%= f.text_field :city ,class:"form-control" %>
</fieldset>
</div>
</div>

<div class="form-group">
  <div class=col-sm-10>
<fieldset>
  <%= f.label :price %>
  <%= f.number_field :price , class:"form-control" %>
</fieldset>
</div>
</div>

<div class="form-group">
  <div class=col-sm-10>
<fieldset>
  <%= f.label :property_type %>
  <%= f.text_field :property_type  , class:"form-control"%>
</fieldset>
</div>
</div>

<div class="form-group">
  <div class=col-sm-10>

    <fieldset>
      <%= f.label :image %>
      <%= f.cl_image_upload :image %>
    </fieldset>
</div>
</div>


<div class="form-group">
  <div class=col-sm-10>
<fieldset>
  <%= f.label :description %>
  <%= f.text_field :description ,  class:"form-control" %>
</fieldset>
</div>
</div>

<div class="form-group">
  <div class="col-sm-10">
    <br><%= f.submit  'submit', class:"btn btn-primary" %>
  </div>
</div>

<% end %>
